
@model onlinemarketing.Models.product
@{
    ViewBag.Title = "Add_tocart";
    Layout = "~/Views/Shared/Layout1.cshtml";
}

@using (Html.BeginForm())
{

    <style>
        td {
            padding: 20px;
        }
    </style>

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <img src="~/Content/img/ecommerce-2140603_960_720.jpg" class="img img-responsive" style="width:100%" />
        </div>
    </div>

   

        <div>
            <h1>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
            <img src="@Url.Content(@Model.pro_image)" style="width:200PX; height:200PX" />
        </div>

        @*<img src="@Url.Content(@Model.pro_image)" style="width:200PX; height:200PX" />*@


    <div class="col-lg-8 col-md-8 col-sm-8">

        <h1>Name:@Model.pro_name</h1>
        <h2>Price:@Model.pro_price</h2>
        <h6>Description:@Model.pro_desc</h6>
        <input type="number" name="qty" value="0" id="qty" min="1" max="12" />
        <input type="submit" name="Submit" class="btn btn-danger" />

       </div>
         





    <div class="col-lg-2 col-md-2">
        <img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style=" height:500px;" />
    </div>

}

